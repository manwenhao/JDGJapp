<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.example.jdgjapp.work.bangong.cailiao.HorizontalProgressBarWithNumber
        android:id="@+id/cl_wholeofdept_item_bar"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        app:progress_reached_bar_height="10dp"
        app:progress_unreached_bar_height="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:progress_reached_color="@color/red"
        app:progress_unreached_color="@color/blue"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/cl_wholeofdept_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp"
        android:textColor="#000"/>
    <TextView
        android:id="@+id/cl_wholeofdept_item_used"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/cl_wholeofdept_item_name"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:textColor="#000"/>
    <TextView
        android:id="@+id/cl_wholeofdept_item_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/cl_wholeofdept_item_used"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:textColor="#000"/>
</RelativeLayout>