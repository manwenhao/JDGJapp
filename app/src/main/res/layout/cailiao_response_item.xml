<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">
    <TextView
        android:id="@+id/cl_res_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#000"
        android:text="材料:钢笔"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:id="@+id/cl_res_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#000"
        android:layout_toEndOf="@id/cl_res_name"
        android:layout_marginLeft="15dp"
        android:text="使用时间:2018/12/22"/>
    <TextView
        android:id="@+id/cl_res_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#000"
        android:layout_below="@id/cl_res_name"
        android:text="使用数量:10"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/cl_res_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cl_res_date"
        android:layout_toEndOf="@id/cl_res_num"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:text="申请者:徐啸"
        android:textColor="#000"
        android:textSize="15sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/icon_right" />


</RelativeLayout>