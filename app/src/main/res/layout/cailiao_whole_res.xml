<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/cl_res_whole_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="15sp"
        android:text="申请人:徐啸"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"

        />
    <TextView
        android:id="@+id/cl_res_whole_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/cl_res_whole_name"
        android:text="时间:1888-33-33 22:22:22"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:textSize="15sp"
        android:textColor="#000"/>
    <ImageView
        android:id="@+id/asfasfas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_right"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/cl_res_whole_isget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="15sp"
        android:text="是否领料：否"
        android:layout_toLeftOf="@id/asfasfas"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:visibility="gone"
        />
</RelativeLayout>