<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.jdgjapp.work.bangong.gongdan.GongDanMain">
    <LinearLayout
        android:id="@+id/task_listview_head"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <include layout="@layout/task_listhead"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/task_listview_over"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#fff">
        <include layout="@layout/task_list_over"/>
    </LinearLayout>
    <ListView
        android:id="@+id/task_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/tv_nodata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"/>

</LinearLayout>
